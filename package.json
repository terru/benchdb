{
  "name": "benchdb",
  "version": "1.0.0",
  "description": "A tool for database benchmarks",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js -L",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:clean": "docker-compose down --rmi all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terru/benchdb.git"
  },
  "keywords": [
    "benchmark",
    "node",
    "database",
    "engine"
  ],
  "author": "Agustin Terruzzi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/terru/benchdb/issues"
  },
  "homepage": "https://github.com/terru/benchdb#readme",
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "async-mqtt": "^2.6.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "joi": "^17.4.0",
    "mongoose": "^5.11.18"
  },
  "husky": {
    "hooks": {
      "post-checkout": "npm i",
      "pre-commit": "lint-staged",
      "post-commit": "git status"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
